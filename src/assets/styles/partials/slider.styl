.slider
    width 100%
    flex 1
    display flex
    flex-direction column
.slider__item
    flex 1
    position relative
    display flex
    flex-direction column
    justify-content center
    align-content center
    height calc(100vh - 80px)
    z-index 1
.slider__capa
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background-color $tertiary_color
    background-position center center
    background-clip content-box
    background-size cover
    background-attachment fixed
    z-index -1
    flex 1

.slider__arrowdown
    position absolute
    bottom 1em
    left calc(50% - 1em)
    .icon
        width 2em
        height 2em
        fill white

// Extra small devices (portrait phones, less than 576px)
@media (max-width: 575px)
    .slider__capa--one
            background-image url(../img/background-boy-iceberg-576px.jpg)
    // 1.25dpi
    @media (-webkit-max-device-pixel-ratio: 1.25), (max-resolution: 120dpi), (max-resolution: 1.25dppx)
        .slider__capa--one
            background-image url(../img/background-boy-iceberg-720px.jpg)
    // 1.5dpi
    @media (-webkit-max-device-pixel-ratio: 1.5), (max-resolution: 144dpi), (max-resolution: 1.25dppx)
        .slider__capa--one
            background-image url(../img/background-boy-iceberg-864px.jpg)
    // 2dpi
    @media (-webkit-max-device-pixel-ratio: 2), (max-resolution: 192dpi), (max-resolution: 1.25dppx)
        .slider__capa--one
            background-image url(../img/background-boy-iceberg-1152px.jpg)
    // 3dpi
    @media (-webkit-max-device-pixel-ratio: 3), (max-resolution: 328dpi), (max-resolution: 1.25dppx)
